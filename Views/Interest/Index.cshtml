@using ASP_MVC_CV_Prj.Models.Entity
@model List<Interests>

@{
    ViewBag.Title = "AddInterest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Certifications List</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Interest</th>
            <th scope="col">Icon</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th scope="row">@d.ID</th>
                <td>@d.Hobby</td>
                <td>@d.Icon</td>


                <td><a href="/Interest/GetInterest/@d.ID" class="btn btn-warning">Edit</a></td>
                <td><a href="/Interest/DeleteInterest/@d.ID" class="btn btn-danger">Delete</a></td>
            </tr>
        }

    </tbody>
</table>

<a href="/Interest/AddInterest/" class="btn btn-info">Add New</a>