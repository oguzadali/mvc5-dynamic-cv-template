@using ASP_MVC_CV_Prj.Models.Entity
@model List<SocialMediaLinks>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Social Media Links List</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Link</th>
            <th scope="col">Show</th>
            <th scope="col">Icon</th>
            <th scope="col">Edit</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {

            <tr>
                <th scope="row">@d.ID</th>
                <td>@d.Name</td>
                <td>@d.Link</td>
                @if (@d.Show == true)
                {
                    <td>
                        @*<div class="form-check">
                                <input class="form-check-input position-static" type="checkbox" id="blankCheckbox" value="option1" aria-label="...">
                            </div>*@
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                    </td>
                }
                else
                {
                    <td>
                        @*<div class="form-check">
                                <input class="form-check-input position-static" type="checkbox" id="flexCheckChecked" value="option2" aria-label="...">
                            </div>*@
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </td>
                }

                <td>@d.Icon</td>


                <td><a href="/SocialMedia/GetSocial/@d.ID" class="btn btn-warning">Edit</a></td>
                <td><a href="/SocialMedia/DeleteSocial/@d.ID" class="btn btn-danger">Delete</a></td>
            </tr>
        }

    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
   Add New
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Social Media</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" >
            <div class="modal-body">
                <label>Platform</label>
                <input type="text" value="" name="Name" class="form-control"/>
                <br />
                <label>Link</label>
                <input type="text" value="" name="Link" class="form-control"/>
                <br />
                <label style="margin-right:50px">Show</label> 
                <span>  
                <input type="checkbox" value="" name="Show" class="form-check-input"/>
                
                </span>
                <br />
                 <label>Icon</label>
                <input type="text" value="" name="Icon" class="form-control" placeholder="Font Awesome Icons"/>
                <br /><br />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                @*<a href="/SocialMedia/Index/" class="btn btn-info">Add New</a>*@
                <button formaction="/SocialMedia/Add" type="submit" class="btn btn-primary">Add</button>
            </div>
            </form>
        </div>
    </div>
</div>