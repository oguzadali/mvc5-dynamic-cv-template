@using ASP_MVC_CV_Prj.Models.Entity
@model List<Portfolio>
@{
    Layout = null;
}

<div class="container-fluid">
    <h2 class="mb-5">Portfolio</h2>
    <div class="row ">
        <!--Card1 -->
        @foreach (var d in Model)
        {


            <div class="portfolio-card col-sm-6 col-md-4 col-lg-3 d-inline ">
                <div class="portfolio-card-content">
                    <img src=@d.Image alt="Lights">
                    <div class="p-2">
                        <h4 class="mt-3 ">@d.ProjectName</h4>
                        <p>@d.ProjectDetails</p>
                   
                    </div>
                </div>

                <div class="portfolio-card-hover p-2 d-flex justify-content-between flex-column align-content-center align-items-center ">
                    <div class=" text-center  mt-2">
                        <h4 class="mb-4">Accomplishments</h4>
                        
                        <ul style="list-style: none; padding: 0; margin: 0; " id="portfolio-properties-list">
                            @{ string[] a = @d.Properties.Split(','); }
                            @foreach (var b in a)
                            {                            
                            <li> @b </li>                            
                            }
                           

                        </ul>
                    </div>

                    <div class=" d-flex mb-4 social-icons ">
                        <a class="social-icon" href="#"> <i class="fab fa-github " aria-hidden="true"></i> </a>
                        <a class="social-icon" href="#"> <i class="fa fa-globe " aria-hidden="true"></i> </a>

                    </div>
                </div>
            </div>
        }
        
    </div>
</div>