@using ASP_MVC_CV_Prj.Helpers

@using (Html.BeginForm("ContactF","Default",FormMethod.Post, new { role = "form" }))
{



@*<form method="post">*@
    @Html.AntiForgeryToken()
    
    <h3 class="mb-4">Contact</h3>
    <div class="form-group my-2">
        <input type="text" class="form-control" id="inputName" name="Name" placeholder="Name" required>
    </div>
    <div class="form-group my-2">
        <input type="text" class="form-control" id="inputMail" name="Mail" placeholder="Mail">
    </div>
    <div class="form-group my-2">
        <input type="text" class="form-control" id="inputSubject" name="Subject" placeholder="Subject" required>
    </div>
    <div class="form-group my-2">
        <textarea style="resize: none;" rows="4" type="text" class="form-control" id="inputText"
                  name="Message" placeholder="Text" required></textarea>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.GoogleCaptcha()
            @Html.InvalidGoogleCaptchaLabel("Captcha is not valid !")
        </div>
    </div>
    <div class="d-flex justify-content-between mt-4 form-group">
        <button type="submit" class="btn btn-primary-contact ">Send</button>
        <button type="button" class="btn btn-danger cancel  ml-2 " onclick="closeForm()">X</button>
    </div>
@*</form> *@
}